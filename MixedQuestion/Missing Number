class Solution {
    public int missingNumber(int[] nums) {
       Arrays.sort(nums);
       if(nums.length==1 && nums[0]!=0){
           return 0;
       }
       if(nums.length==1 && nums[0]==0){
            return 1;
       }
       if(nums[0]!=0){
           return 0;
       }
        for(int i = 1 ; i < nums.length ; i++){
            if(nums[i-1]!=nums[i]-1){
                return nums[i-1]+1;
                
            }
        }
        return nums.length;

    }
}
