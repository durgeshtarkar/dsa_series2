class Solution {
    public boolean isPalindrome(int x) {
        int r = 0;
        int original = x;
        if(x < 0){
            return false;
        }
        while(x != 0){
            int n = x % 10;
            x = x / 10;
            if( r > Integer.MAX_VALUE/10 || r < Integer.MIN_VALUE/10){
                return false;
            }
            r = r * 10 + n ;
            
        }
        return original == r;
    }
}
