class Solution {
    public int countHillValley(int[] nums) {
        int count = 0;
        int j = 0;
        for(int i = 1; i < nums.length-1 ; i++){
               if(nums[j] < nums[i] && nums[i+1] < nums[i] || nums[j] > nums[i] && nums[i+1] > nums[i]){
                    count++;
                    j = i;
               }
        }
        return count;
    }
}
