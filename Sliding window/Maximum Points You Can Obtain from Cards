class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int leftSum = 0;
        int maxSum = 0;
        for(int i = 0 ; i < k ; i++){
           leftSum += cardPoints[i];
           maxSum = leftSum;
        }
        int n = cardPoints.length;
        int rightIndex = n-1;
        int rightSum = 0;
        for(int j = k-1 ; j >=0 ; j--){
            rightSum+= cardPoints[rightIndex];
            rightIndex--;
            leftSum = leftSum - cardPoints[j];

            maxSum = Math.max(maxSum  , leftSum + rightSum);
        }
        return maxSum;
    }
}
